{
  "compilerOptions": {
    "jsx": "preserve",
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@Layouts": ["pages/layouts"],
      "@Components": ["pages/components"],
      "@Common": ["pages/common"],
      "@Utils/*": ["pages/utils/*"],
      "@Assets/*": ["pages/assets/*"],
      "@Models": ["pages/models/*"],
      "@Analysers": ["pages/analysers"],
      "@Api/*": ["pages/api/*"],
      "@Hardhat/*": ["pages/api/hardhat/*"],
      "@Contracts/*": ["pages/api/hardhat/artifacts/contracts/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "pages/api/rpc.js"],
  "exclude": ["node_modules"]
}
